{% from 'header.njk' import header with context %}
{% from 'portfolio-list.njk' import portfolioList with context %}

<main class="page__main main">
	{{ header( mainBlock = 'page' ) }}

	<section class="main__section promo" id="about">
		<h1 class="promo__heading">{{ promo.heading }}</h1>
		<p class="promo__text">{{ promo.lead | safe }}</p>
		<div class="promo__buttons">
			<a href="{{ meta.cv }}" class="button button_secondary button_small_l button_medium_l button_large_xl button_ico_download">CV</a>
			<a href="/#portfolio" class="button button_small_l button_medium_l button_large_xl">Portfolio</a>
		</div>
	</section>

	<section class="main__category category" id="design">
		<header class="category__header category-header">
			<h2 class="category-header__heading">{{ design.heading }}</h2>
			<p class="category-header__lead">{{ design.lead | safe }}</p>
			{% if design.comment %}
				<p class="category-header__comment">{{ design.comment }}</p>
			{% endif %}
			<div class="category-header__description">
				{{ design.text | markdown | safe }}
			</div>
		</header>

		<section class="category__section section">
			<div class="section__header">
				<h3 class="section__heading" data-category="{{ design.heading }}">{{ design.skills.heading }}</h3>
				{% if academy.skills.comment %}
					<p class="section__comment">{{ academy.skills.comment }}</p>
				{% endif %}
			</div>

			<ul class="section__skills skills">
				{% for item in design.skills.list %}
					<li class="skills__item">{{ item }}</li>
				{% endfor %}
			</ul>
		</section>

		<section class="category__section section" id="portfolio">
			<div class="section__header">
				<h3 class="section__heading" data-category="{{ design.heading }}">{{ design.portfolio.heading }}</h3>
				{% if academy.portfolio.comment %}
					<p class="section__comment">{{ academy.portfolio.comment }}</p>
				{% endif %}
			</div>

			{{ portfolioList(
				collection = collections.portfolio
			) }}
		</section>
	</section>

	<section class="main__category category" id="academy">
		<header class="category__header category-header">
			<h2 class="category-header__heading">{{ academy.heading }}</h2>
			<p class="category-header__lead">{{ academy.lead | safe }}</p>
			{% if academy.comment %}
				<p class="category-header__comment">{{ academy.comment }}</p>
			{% endif %}
			<div class="category-header__description">
				{{ academy.text | markdown | safe }}
			</div>
		</header>

		<section class="category__section section">
			<div class="section__header">
				<h3 class="section__heading" data-category="{{ academy.heading }}">{{ academy.courses.heading }}</h3>
				{% if academy.courses.comment %}
					<p class="section__comment">{{ academy.courses.comment }}</p>
				{% endif %}
			</div>

			<h4 class="visually-hidden">{{ academy.courses.scope.heading }}</h4>
			<ul class="section__courses courses">
				{% for item in academy.courses.scope.list %}
					<li class="courses__item">
						<span class="courses__label label label_small_s">{{ item.label }}</span>
						<a href="{{ item.url }}" class="courses__title">{{ item.name }}</a>
						{% if item.comment %}
							<span class="courses__comment">{{ item.comment }}</span>
						{% endif %}
					</li>
				{% endfor %}
			</ul>

			<h4 class="visually-hidden">{{ academy.courses.achievements.heading }}</h4>
			<ul class="section__achievements achievements">
				{% for item in academy.courses.achievements.list %}
					<li class="achievements__item">
						<span class="achievements__amount">
							{{ item.amount }}
							{%- if item.unit -%}
								<sup>{{ item.unit }}</sup>
							{%- endif -%}
						</span>
						{{ item.text }}
					</li>
				{% endfor %}
			</ul>
		</section>

		<section class="category__section section">
			<div class="section__header">
				<h3 class="section__heading" data-category="{{ academy.heading }}">{{ academy.links.heading }}</h3>
				{% if academy.links.comment %}
					<p class="section__comment">{{ academy.links.comment }}</p>
				{% endif %}
			</div>

			<ul class="section__links links">
				{% for item in academy.links.list %}
					<li class="links__item">
						<h3 class="links__heading">{{ item.heading }}</h3>
						<p class="links__text">{{ item.text }}</p>
						<a href="{{ item.link.url }}" class="links__link links__link_{{ item.link.type }}">{{ item.link.title }}</a>
						{% if item.slides %}
							<a href="{{ item.slides }}" class="links__link links__link_slides">Slides</a>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		</section>
	</section>

	<section class="main__category category" id="contacts">
		<header class="category__header category-header">
			<h2 class="category-header__heading">{{ contacts.heading }}</h2>
			<p class="category-header__lead">{{ contacts.lead | safe }}</p>
			{% if contacts.comment %}
				<p class="category-header__comment">{{ contacts.comment }}</p>
			{% endif %}

			<ul class="category-header__links contact-links">
				{% for item in contacts.list %}
					<li class="contact-links__item">
						<a href="{{ item.url }}" class="contact-links__link">{{ item.title }}</a>
					</li>
				{% endfor %}
			</ul>
		</header>
	</section>
</main>
